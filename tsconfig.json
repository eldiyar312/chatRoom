{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/*"],
    "exclude": ["node_modules/**/*"]
}
